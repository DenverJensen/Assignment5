        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="757*"/>
        </Grid.ColumnDefinitions>
        <Label Content="High Scores:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="57,10,0,0" VerticalAlignment="Top" Height="76" Width="577" FontSize="48" FontWeight="Bold" Grid.Column="1"/>
