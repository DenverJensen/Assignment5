<Window x:Class="Assignment5.Scores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" 
        Left="100" Top="100"
        Title="High Scores" Height="450" Width="800">

    <Grid>
        <Label x:Name="lbl_scores" Content="High Scores:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Height="76" Width="577" FontSize="48" FontWeight="Bold" Foreground="White" Background="#FF0FFF00"/>
        <Button x:Name="exit_scores" Content="New Game" HorizontalAlignment="Left" Margin="302,345,0,0" VerticalAlignment="Top" Height="39" Width="173" Click="exit_scores_Click" FontSize="18"/>
        <Label x:Name="lbl_results" Content="Name: results:" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" Background="#FF06FF00" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22"/>

    </Grid>
</Window>
